<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBE1FF">

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="249dp"
        android:layout_height="215dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15sp"
        android:indeterminateTint="#435B9F" />

    <TextView
        android:id="@+id/tvCongrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="30sp"
        android:fontFamily="@font/abril_fatface"
        android:text="Great job, youâ€™re almost there!"
        android:textColor="#435B9F"
        android:textSize="24sp" />

    <FrameLayout
        android:layout_width="140sp"
        android:layout_height="96sp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="15sp"
        android:layout_marginBottom="15sp"
        android:background="#4A5C92">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/roboto_medium"
            android:text="Correct Answer"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvBenar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/roboto_medium"
            android:text="12"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="140sp"
        android:layout_height="96sp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="15sp"
        android:layout_marginBottom="15sp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/roboto_medium"
            android:text="Wrong Answer"
            android:textColor="#4A5C92" />

        <TextView
            android:id="@+id/tvSalah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:text="3"
            android:textColor="#4A5C92"
            android:textSize="24sp" />
    </FrameLayout>
</FrameLayout>